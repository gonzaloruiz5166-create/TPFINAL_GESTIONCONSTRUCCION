        <DataGrid x:Name="trabajadoresDataGrid" 
          AutoGenerateColumns="False" 
          CanUserAddRows="False" 
          CanUserDeleteRows="True" 
          Margin="10,200,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Apellido" Binding="{Binding Apellido}" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                <DataGridTextColumn Header="Domicilio" Binding="{Binding Domicilio}" />
                <DataGridTextColumn Header="Localidad" Binding="{Binding Localidad}" />
                <DataGridTextColumn Header="Provincia" Binding="{Binding Provincia}" />
                <DataGridTextColumn Header="Celular" Binding="{Binding NroCelular}" />
                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria.Nombre}" />
                <DataGridTextColumn Header="Rango" Binding="{Binding Rango.Nombre}" />
                <DataGridTextColumn Header="Área Trabajo" Binding="{Binding AreaTrabajo}" />
                <DataGridTextColumn Header="Horas" Binding="{Binding CantidadHoras}" />
                <DataGridTextColumn Header="Valor Hora" Binding="{Binding ValorHora}" />
                <DataGridTextColumn Header="Sueldo" Binding="{Binding Sueldo}" />
                <DataGridTextColumn Header="Fecha Ingreso" Binding="{Binding FechaIngresoString}"/>

                <!-- Columna para el botón de editar -->
                <DataGridTemplateColumn Header="Editar">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- Botón con texto "Editar" para editar -->
                            <Button Content="Editar" 
                            Click="EditarTrabajador_Click" 
                            Cursor="Hand" 
                            Background="Transparent" 
                            Foreground="Green" 
                            FontWeight="Bold" 
                            FontSize="16"
                            BorderThickness="0" 
                            HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Columna para el botón de borrar -->
                <DataGridTemplateColumn Header="Eliminar">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- Botón con texto "Eliminar" para eliminar -->
                            <Button Content="Eliminar" 
                            Click="EliminarTrabajador_Click" 
                            Cursor="Hand" 
                            Background="Transparent" 
                            Foreground="Red" 
                            FontWeight="Bold" 
                            FontSize="16"
                            BorderThickness="0" 
                            HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
